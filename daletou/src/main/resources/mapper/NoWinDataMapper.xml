<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ball.ball.dao.NoWinDataDao">

    <resultMap id="noWinDataInfoMap" type="com.ball.ball.entity.NoWinDataInfo">
        <id property="id" column="id"></id>
        <result property="noWinNum" column="no_win_num"></result>
        <result property="moneyCount" column="money_count"></result>
        <result property="odd" column="odd"></result>
        <result property="even" column="even"></result>
    </resultMap>
    <insert id="insertBatch" parameterType="NoWinDataInfo" useGeneratedKeys="true" keyProperty="id">
        insert into no_win_data_info(no_win_num,money_count) values
        <foreach collection="list" item="w" separator="," close=";">
            (#{w.noWinNum},#{w.moneyCount})
        </foreach>
    </insert>

    <select id="getByHistoryData" resultMap="noWinDataInfoMap" parameterType="String">
        select * from no_win_data_info where no_win_num in
        <foreach collection="list" item="w" separator="," open ="("  close=")">
            #{w}
        </foreach>
    </select>

    <delete id="batchDelete" parameterType="Integer">
        delete from no_win_data_info where id in
        <foreach collection="list" item="w" separator="," open ="("  close=")">
            #{w}
        </foreach>
    </delete>

    <select id="getAll" resultMap="noWinDataInfoMap">
        select * from no_win_data_info
    </select>

    <update id="updateById" parameterType="NoWinDataInfo">
        update no_win_data_info set odd = #{odd},even = #{even} where id = #{id}
    </update>

</mapper>