<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ball.ball.dao.RedBallDao">
    <resultMap id="BaseResultMap" type="com.ball.ball.entity.RedBallInfo">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="red_ball" property="redBall" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="VARCHAR"/>
    </resultMap>


    <insert id="insertOne" parameterType="RedBallInfo" useGeneratedKeys="true" keyProperty="id">
        insert into red_ball_info(red_ball,create_time)
        values (#{redBall},#{createTime})
    </insert>

    <insert id="insertBatch" parameterType="RedBallInfo" useGeneratedKeys="true" keyProperty="id">
        insert into red_ball_info(red_ball,create_time) values
        <foreach collection="list" item="redBallInfo" separator="," close=";">
            (#{redBallInfo.redBall},#{redBallInfo.createTime})
        </foreach>
    </insert>

    <select id="selectById" parameterType="INTEGER" resultMap="BaseResultMap">
        SELECT *
        FROM red_ball_info
        WHERE id = #{id}
    </select>

    <select id="selectByRedBall" parameterType="STRING" resultMap="BaseResultMap">
        SELECT *
        FROM red_ball_info
        WHERE red_ball = #{redBall}
    </select>

    <select id="queryByStartAndEndIdx" parameterType="INTEGER" resultMap="BaseResultMap">
        SELECT *
        FROM red_ball_info
        WHERE id &gt;= #{arg0} and id &lt;= #{arg1}
    </select>

</mapper>