<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ball.ball.dao.WinDataInfoDao">
    <resultMap id="BaseResultMap" type="com.ball.ball.entity.WinDataInfo">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="red_and_blue" property="redAndBlue" jdbcType="VARCHAR"/>
        <result column="history_data" property="historyData" jdbcType="VARCHAR"/>
        <result column="the_first_prize_count" property="theFirstPrizeCount" jdbcType="VARCHAR"/>
        <result column="second_award_count" property="secondAwardCount" jdbcType="VARCHAR"/>
        <result column="money_count" property="moneyCount" jdbcType="VARCHAR"/>

    </resultMap>


    <insert id="saveOne" parameterType="WinDataInfo" useGeneratedKeys="true" keyProperty="id">
        insert into win_data_info(red_and_blue,the_first_prize_count,second_award_count,money_count,date_time,history_data)
        values (#{redAndBlue},#{theFirstPrizeCount},#{secondAwardCount},#{moneyCount},#{dateTime},#{historyData})
    </insert>

    <insert id="insertBatch" parameterType="WinDataInfo" useGeneratedKeys="true" keyProperty="id">
        insert into win_data_info(red_and_blue,the_first_prize_count,second_award_count,money_count,date_time,history_data) values
        <foreach collection="list" item="w" separator="," close=";">
         (#{w.redAndBlue},#{w.theFirstPrizeCount},#{w.secondAwardCount},#{w.moneyCount},#{w.dateTime},#{w.historyData})
        </foreach>
    </insert>

    <select id="getByHistoryData" resultMap="BaseResultMap" parameterType="String">
        select * from win_data_info where red_and_blue in
        <foreach collection="list" item="w" separator="," open ="("  close=")">
            #{w}
        </foreach>
    </select>


</mapper>