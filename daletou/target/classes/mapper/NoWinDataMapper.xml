<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ball.ball.dao.NoWinDataDao">

    <resultMap id="noWinDataInfoMap" type="com.ball.ball.entity.NoWinDataInfo">
        <id property="id" column="id"></id>
        <result property="noWinNum" column="no_win_num"></result>
        <result property="moneyCount" column="money_count"></result>
        <result property="odd" column="odd"></result>
        <result property="even" column="even"></result>
    </resultMap>
    <insert id="insertBatch" parameterType="NoWinDataInfo" useGeneratedKeys="true" keyProperty="id">
        insert into no_win_data_info(no_win_num,money_count) values
        <foreach collection="list" item="w" separator="," close=";">
            (#{w.noWinNum},#{w.moneyCount})
        </foreach>
    </insert>

    <select id="getByHistoryData" resultMap="noWinDataInfoMap" parameterType="String">
        select * from no_win_data_info where no_win_num in
        <foreach collection="list" item="w" separator="," open ="("  close=")">
            #{w}
        </foreach>
    </select>

    <delete id="batchDelete" parameterType="Integer">
        delete from no_win_data_info where id in
        <foreach collection="list" item="w" separator="," open ="("  close=")">
            #{w}
        </foreach>
    </delete>

    <select id="getAll" resultMap="noWinDataInfoMap" parameterType="INTEGER">
        select * from no_win_data_info where id &gt; #{arg0} and id &lt;= #{arg1}
    </select>

    <update id="updateById" parameterType="NoWinDataInfo" >
        update no_win_data_info set odd = #{odd},even = #{even} where id = #{id}
    </update>

    <update id="batchUpdateById" parameterType="com.ball.ball.entity.NoWinDataInfo">
<!--        update no_win_data_info set-->
<!--        <foreach collection="list" item="noWinDataInfo" open="odd = case id" close="end,">-->
<!--            when #{noWinDataInfo.id} then #{noWinDataInfo.odd}-->
<!--        </foreach>-->
<!--        <foreach collection="list" item="noWinDataInfo" open="even = case id" close="end">-->
<!--            when #{noWinDataInfo.id} then #{noWinDataInfo.even}-->
<!--        </foreach>-->
<!--        where id in-->
<!--        <foreach collection="list" item="noWinDataInfo" open="(" close=")" separator=",">-->
<!--            #{noWinDataInfo.id}-->
<!--        </foreach>-->
            UPDATE no_win_data_info
            <trim prefix="set" suffixOverrides=",">
                <trim prefix="odd=case" suffix="end,">
                    <foreach collection="list" item="noWinDataInfo">
                        WHEN id =#{noWinDataInfo.id} THEN #{noWinDataInfo.odd}
                    </foreach>
                </trim>
                <trim prefix="even=case" suffix="end">
                    <foreach collection="list" item="noWinDataInfo">
                        WHEN id =#{noWinDataInfo.id} THEN #{noWinDataInfo.even}
                    </foreach>
                </trim>

            </trim>
            <where>
                <foreach collection="list" separator="or" item="noWinDataInfo">
                    id =#{noWinDataInfo.id}
                </foreach>
            </where>

    </update>

</mapper>